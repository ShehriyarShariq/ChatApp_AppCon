<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/others"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/otherImg"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_user"
                android:layout_alignParentLeft="true"
                android:visibility="gone"
                android:layout_marginLeft="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentLeft="true">

                <LinearLayout
                    android:id="@+id/otherDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="2dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/otherDetailsNotSaved"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/otherNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="+92 123 4567890"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="0.5"/>

                        <com.vanniktech.emoji.EmojiTextView
                            android:id="@+id/otherAltName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="~Name"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_weight="0.5"
                            android:textAlignment="viewEnd"
                            app:emojiSize="24sp"/>

                    </LinearLayout>

                    <com.vanniktech.emoji.EmojiTextView
                        android:id="@+id/otherName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="Name"
                        android:layout_marginLeft="10dp"
                        android:visibility="gone"
                        app:emojiSize="24sp"/>

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/textMsgOther"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/msg_bubble_top_other"
                    android:visibility="gone"
                    android:layout_marginTop="2dp">

                    <com.vanniktech.emoji.EmojiTextView
                        android:id="@+id/textOther"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="2dp"
                        android:elevation="2dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp"
                        android:text="."
                        android:textColor="#000"
                        android:textSize="15sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:emojiSize="24sp"
                        android:minWidth="100dp"/>

                    <TextView
                        android:id="@+id/txtMsgOtherTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="2:57AM"
                        android:layout_marginRight="20dp"
                        android:layout_below="@+id/textOther"
                        app:layout_constraintTop_toBottomOf="@+id/textOther"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:translationY="-5dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/imageLayoutOther"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/msg_bubble_mid_other"
                    android:layout_marginTop="2dp"
                    android:visibility="gone">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/imageOther"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_margin="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sample_img"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:riv_corner_radius="20dp" />

                    <com.vanniktech.emoji.EmojiTextView
                        android:id="@+id/imgTxtOther"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="sgdfdfdsf sadvfserf"
                        app:layout_constraintTop_toBottomOf="@+id/imageOther"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:textSize="17sp"
                        android:textColor="#000"
                        android:visibility="gone"
                        app:emojiSize="24sp"/>

                    <TextView
                        android:id="@+id/imgMsgOtherTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="2:57AM"
                        android:layout_marginRight="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/imgTxtOther"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="5dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/audioOther"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="@drawable/msg_bubble_mid_other"
                    android:layout_marginTop="2dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/audioMsgOtherTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="2:57AM"
                        android:layout_marginRight="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="5dp"
                        android:elevation="2dp"
                        android:layout_marginBottom="5dp"
                        android:visibility="visible"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/audioAlreadyDownloadedOther"
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_margin="4dp"
                        android:visibility="visible">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/audioControlBtnOther"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintHeight_percent="0.85"
                            app:layout_constraintDimensionRatio="W, 1:1"
                            android:layout_centerVertical="true"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginLeft="10dp"
                            app:tint="#fff"
                            android:foregroundGravity="center"
                            android:foreground="@drawable/ic_play"
                            app:fabSize="normal"
                            android:backgroundTint="#000" />

                        <SeekBar
                            android:id="@+id/audioSeekbarOther"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:layout_constraintStart_toEndOf="@+id/audioControlBtnOther"
                            app:layout_constraintEnd_toStartOf="@+id/audioTimeOther"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:thumb="@drawable/seekbar_controller"
                            android:progress="0"
                            android:progressDrawable="@drawable/seekbar"/>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/audioTimeOther"
                            android:layout_width="60dp"
                            android:layout_height="0dp"
                            app:layout_constraintHeight_percent="0.4"
                            app:cardCornerRadius="10dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:cardBackgroundColor="#000"
                            android:layout_marginRight="5dp">

                            <TextView
                                android:id="@+id/audioLengthOther"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="00:00"
                                android:textColor="#fff"
                                android:gravity="center"
                                android:textSize="14sp"
                                android:textAlignment="center"/>

                        </androidx.cardview.widget.CardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/fileMsgOther"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/msg_bubble_top_other"
                    android:visibility="gone"
                    android:layout_marginTop="2dp">

                    <LinearLayout
                        android:id="@+id/fileDetailsLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:gravity="center_vertical"
                        android:layout_marginTop="2dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/ic_docs_black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Document"
                            android:textColor="#000"
                            android:textSize="15sp"
                            android:layout_marginLeft="10dp"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/fileMsgOtherTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="2:57AM"
                        android:layout_marginRight="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/fileDetailsLayout"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:translationY="-5dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/replyOther"
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:background="@drawable/msg_bubble_bot_other"
                    android:layout_marginTop="2dp"
                    android:visibility="gone">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/replyOtherInner"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="9dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="@color/gray_light"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.vanniktech.emoji.EmojiTextView
                                android:id="@+id/senderNameOther"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="Name"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:textSize="15sp"
                                app:emojiSize="24sp"/>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/imageReplyOther"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toBottomOf="@+id/senderNameOther"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:gravity="center_vertical"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/imageIcOther"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintDimensionRatio="W, 1:1"
                                    app:layout_constraintHeight_percent="0.6"
                                    android:src="@drawable/ic_gallery_black"
                                    android:layout_marginLeft="10dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="Image"
                                    android:textSize="17sp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toRightOf="@+id/imageIcOther"
                                    android:layout_marginLeft="10dp"
                                    android:textStyle="bold"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/audioReplyOther"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toBottomOf="@+id/senderNameOther"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:gravity="center_vertical"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/audioIcOther"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintDimensionRatio="W, 1:1"
                                    app:layout_constraintHeight_percent="0.6"
                                    android:src="@drawable/ic_audio_black"
                                    android:layout_marginLeft="10dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="Audio"
                                    android:textSize="17sp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toRightOf="@+id/audioIcOther"
                                    android:layout_marginLeft="10dp"
                                    android:textStyle="bold"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/textReplyReply"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toBottomOf="@+id/senderNameOther"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:gravity="center_vertical"
                                android:visibility="gone">

                                <com.vanniktech.emoji.EmojiTextView
                                    android:id="@+id/textReplyMsgOther"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="This is a message that is supposed to span over two lines. If this doesn't ellipsize after two line"
                                    android:textSize="17sp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:maxLines="2"
                                    android:ellipsize="end"
                                    app:emojiSize="24sp"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/replyMsgOtherTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="2:57AM"
                        android:layout_marginRight="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/replyOtherInner"
                        android:layout_marginTop="5dp"
                        android:elevation="2dp"
                        android:layout_marginBottom="5dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/self"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:visibility="visible">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/textMsgSelf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/msg_bubble_top_self"
                android:visibility="gone">

                <com.vanniktech.emoji.EmojiTextView
                    android:id="@+id/textSelf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is a msg"
                    android:textColor="#000"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:elevation="2dp"
                    android:textSize="15sp"
                    android:layout_marginTop="2dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:emojiSize="24sp"
                    android:minWidth="100dp"/>

                <TextView
                    android:id="@+id/txtMsgSelfTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="2:57AM"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/textSelf"
                    app:layout_constraintTop_toBottomOf="@+id/textSelf"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:translationY="-5dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/imageMsgSelf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/msg_bubble_mid_self"
                android:layout_marginStart="55dp"
                android:layout_marginTop="2dp"
                android:visibility="gone">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imageSelf"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_img"
                    app:riv_corner_radius="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_margin="4dp"/>

                <com.vanniktech.emoji.EmojiTextView
                    android:id="@+id/imgTxtSelf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="sgdfdfdsf sadvfserf"
                    app:layout_constraintTop_toBottomOf="@+id/imageSelf"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="17sp"
                    android:textColor="#000"
                    android:textAlignment="viewEnd"
                    app:emojiSize="24sp"/>

                <TextView
                    android:id="@+id/imgMsgSelfTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="2:57AM"
                    android:layout_marginRight="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/imgTxtSelf"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="5dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/audioSelf"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/msg_bubble_mid_self"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="55dp"
                android:visibility="gone">

                <com.vanniktech.emoji.EmojiTextView
                    android:id="@+id/audioMsgSelfTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="2:57AM"
                    android:layout_marginRight="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="5dp"
                    android:elevation="2dp"
                    android:layout_marginBottom="5dp"
                    app:emojiSize="24sp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_margin="4dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/audioAlreadyDownloadedSelf"
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:visibility="visible">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/audioControlBtnSelf"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintHeight_percent="0.85"
                            app:layout_constraintDimensionRatio="W, 1:1"
                            android:layout_centerVertical="true"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginLeft="10dp"
                            app:tint="#fff"
                            android:foregroundGravity="center"
                            android:foreground="@drawable/ic_play"
                            app:fabSize="normal"
                            android:backgroundTint="#000" />

                        <SeekBar
                            android:id="@+id/audioSeekbarSelf"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:layout_constraintStart_toEndOf="@+id/audioControlBtnSelf"
                            app:layout_constraintEnd_toStartOf="@+id/audioTimeSelf"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:thumb="@drawable/seekbar_controller"
                            android:progress="0"
                            android:progressDrawable="@drawable/seekbar"/>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/audioTimeSelf"
                            android:layout_width="60dp"
                            android:layout_height="0dp"
                            app:layout_constraintHeight_percent="0.4"
                            app:cardCornerRadius="10dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:cardBackgroundColor="#000"
                            android:layout_marginRight="5dp">

                            <TextView
                                android:id="@+id/audioLengthSelf"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="00:00"
                                android:textColor="#fff"
                                android:gravity="center"
                                android:textSize="14sp"
                                android:textAlignment="center"/>

                        </androidx.cardview.widget.CardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fileMsgSelf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/msg_bubble_top_self"
                android:visibility="gone"
                android:layout_marginTop="2dp">

                <LinearLayout
                    android:id="@+id/fileDetailsLayoutSelf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/ic_docs_black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Document"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/fileMsgSelfTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="2:57AM"
                    android:layout_marginRight="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/fileDetailsLayoutSelf"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:translationY="-5dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/replySelf"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:background="@drawable/msg_bubble_bot_self"
                android:layout_marginTop="2dp"
                android:layout_marginStart="55dp"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:id="@+id/replySelfInner"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="9dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/gray_light"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.vanniktech.emoji.EmojiTextView
                            android:id="@+id/senderNameSelf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="Name"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:textSize="15sp"
                            app:emojiSize="24sp"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/imageReplySelf"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toBottomOf="@+id/senderNameSelf"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center_vertical"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/imageIc"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintDimensionRatio="W, 1:1"
                                app:layout_constraintHeight_percent="0.6"
                                android:src="@drawable/ic_gallery_black"
                                android:layout_marginLeft="10dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="Image"
                                android:textSize="17sp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toRightOf="@+id/imageIc"
                                android:layout_marginLeft="10dp"
                                android:textStyle="bold"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/audioReplySelf"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toBottomOf="@+id/senderNameSelf"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center_vertical"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/audioIc"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintDimensionRatio="W, 1:1"
                                app:layout_constraintHeight_percent="0.6"
                                android:src="@drawable/ic_audio_black"
                                android:layout_marginLeft="10dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="Audio"
                                android:textSize="17sp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toRightOf="@+id/audioIc"
                                android:layout_marginLeft="10dp"
                                android:textStyle="bold"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/textReplyReplySelf"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toBottomOf="@+id/senderNameSelf"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center_vertical"
                            android:visibility="gone">

                            <com.vanniktech.emoji.EmojiTextView
                                android:id="@+id/textReplyMsgSelf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="This is a message that is supposed to span over two lines. If this doesn't ellipsize after two line"
                                android:textSize="17sp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:maxLines="2"
                                android:ellipsize="end"
                                app:emojiSize="24sp"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/replyMsgSelfTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="2:57AM"
                    android:layout_marginRight="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/replySelfInner"
                    android:layout_marginTop="5dp"
                    android:elevation="2dp"
                    android:layout_marginBottom="5dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/commonMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/gray"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone">

            <com.vanniktech.emoji.EmojiTextView
                android:id="@+id/commonMsgTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is a message common to all"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:textColor="#000"
                app:emojiSize="24sp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>