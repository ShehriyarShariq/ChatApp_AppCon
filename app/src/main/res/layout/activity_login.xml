                    app:cardCornerRadius="40dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/yellow_bright"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <TextView
